{
  "extends": "@tsconfig/svelte/tsconfig.json",
  "compilerOptions": {
    "types": [
      "svelte",
      "node"
    ],
    "baseUrl": ".",
    // "inlineSourceMap": true,
    "inlineSources": true,
    "resolveJsonModule": true,
    "module": "ESNext",
    "target": "ES6",
    "allowJs": true,
    // "allowImportingTsExtensions": true,
    "noImplicitAny": true,
    "moduleResolution": "node",
    "importHelpers": true,
    "isolatedModules": true,
    "strictNullChecks": true,
    "lib": [
      "DOM",
      "ES5",
      "ES6",
      "ES7"
    ]
  },
  "include": [
    "**/*.ts","locales/*/*.json","*/*/*.svelte"
  ]
}